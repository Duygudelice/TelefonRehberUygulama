
@{
    Layout = null;
}

@using telefonrehberuygulaması.Models.sınıflar
@model List<Rehber>



<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> </link>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">


<h2>REHBER LİSTESİ</h2>
<br />
<br />


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AS SOYAD</th>
        <th>NUMARA</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.ID</td>
            <td>@x.AdSoyad</td>
            <td>@x.numara</td>
            <td><a href="\Rehber\KayıtSil\@x.ID" class="btn btn-danger">SİLME</a></td>
            <td><a href="\Rehber\KayıtGetir\@x.ID" class="btn btn-warning">GÜNCELLE</a></td>


        </tr>
    }

</table>
<br />
<a class="btn btn-primary" href="\Rehber\YeniKayıt">Yeni Kayıt</a>
